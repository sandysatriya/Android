<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/backgroundf">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:scaleType="center"
                android:src="@drawable/pascal" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Hukum Pascal"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:maxLines="10"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:padding="10dp"
                android:gravity="center"
                android:text="“Tekanan yang diberikan pada suatu fluida dalam ruang tertutup diteruskan tanpa berkurang ke tiap titik dalam fluida dan ke dinding bejana.”"
                android:textColor="#666"
                android:textSize="16dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>